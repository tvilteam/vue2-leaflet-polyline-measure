{
  "root": true,

  "env": {
    "node": true
  },

  "extends": ["plugin:vue/recommended"],

  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "indent": ["error", 2],
    "no-console": "error",
    "no-debugger": "error",
    "space-before-function-paren": ["error", "always"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  },

  "parserOptions": {
    "parser": "babel-eslint"
  },

  "settings": {
    "import/resolver": "webpack"
  }
}